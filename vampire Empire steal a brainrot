-- Advanced Player Protection GUI
-- Yapan: ChatGPT (Senin isteğin üzerine)

local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 200, 0, 260)
Frame.Position = UDim2.new(0.1, 0, 0.1, 0)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.Active = true
Frame.Draggable = true

local UIListLayout = Instance.new("UIListLayout", Frame)
UIListLayout.Padding = UDim.new(0, 5)

local function makeButton(text, callback)
    local btn = Instance.new("TextButton", Frame)
    btn.Size = UDim2.new(1, -10, 0, 40)
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Text = text
    btn.MouseButton1Click:Connect(callback)
    return btn
end

-- Anti-Hit
local antiHitEnabled = false
makeButton("Anti-Hit", function()
    antiHitEnabled = not antiHitEnabled
    if antiHitEnabled then
        game.Players.LocalPlayer.Character.Humanoid.PlatformStand = false
        game.Players.LocalPlayer.Character.Humanoid.StateChanged:Connect(function(_, newState)
            if antiHitEnabled and newState == Enum.HumanoidStateType.Physics then
                game.Players.LocalPlayer.Character.Humanoid:ChangeState(Enum.HumanoidStateType.GettingUp)
            end
        end)
    end
end)

-- Anti-Die
local antiDieEnabled = false
makeButton("Anti-Die", function()
    antiDieEnabled = not antiDieEnabled
    if antiDieEnabled then
        game:GetService("Players").LocalPlayer.Character.Humanoid.HealthChanged:Connect(function(hp)
            if antiDieEnabled and hp <= 0 then
                game.Players.LocalPlayer.Character.Humanoid.Health = 100
            end
        end)
    end
end)

-- Infinite Jump
local infJump = false
makeButton("Infinite Jump", function()
    infJump = not infJump
    local plr = game.Players.LocalPlayer
    local uis = game:GetService("UserInputService")
    uis.JumpRequest:Connect(function()
        if infJump then
            plr.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
        end
    end)
end)

-- Speed Hack
local speedEnabled = false
makeButton("Speed (Toggle)", function()
    speedEnabled = not speedEnabled
    if speedEnabled then
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 100
    else
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16
    end
end)
